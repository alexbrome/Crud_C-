<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="trabajointerfaces.Vistas.AlumnoTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:trabajointerfaces.Vistas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid 
        >
        <Image Source="C:\Users\alexb\Desktop\programar2.jpg" Stretch="UniformToFill" Opacity="0.4" />
        <StackPanel
        Margin="10"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

            <!--  Titulo  -->
            <TextBlock x:ConnectionId='2'
            x:Name="titulo"
            Grid.Row="0"
            Margin="0,0,0,10"
            Style="{ThemeResource HeaderTextBlockStyle}"
            Text="Registrar Alumno" />

            <!-- Advertencia de Validacion Alumno   -->
            <InfoBar x:ConnectionId='3'
            x:Name="alert"
            Margin="0,0,0,20"
            IsOpen="False" />


            <!--  DNi  -->
            <TextBox x:ConnectionId='4'
              x:Name="txtDni"
              Margin="0,0,0,10"
                              
              PlaceholderText="Dni"
                                 />
            <!--  Validacion dni  -->
            <TextBlock x:ConnectionId='5'
                x:Name="errorDni"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
               Visibility="Collapsed" />


            <!--  Nombre  -->
            <TextBox x:ConnectionId='6'
            x:Name="txtNombre"
            Margin="0,0,0,10"
                             
            PlaceholderText="Nombre"
                                 />
            <!--  Validacion Nombre  -->
            <TextBlock x:ConnectionId='7'
            x:Name="errorNombre"
            Margin="0,0,0,10"
            Foreground="Red"
            Style="{ThemeResource CaptionTextBlockStyle}"
            Visibility="Collapsed" />


            <!--  Apellido -->
            <TextBox x:ConnectionId='8'
            x:Name="txtApellido"
            Margin="0,0,0,10"
                                    
            PlaceholderText="Apellido"
                                        />
            <!--  Validacion Apellido  -->
            <TextBlock x:ConnectionId='9'
            x:Name="errorApellido"
            Margin="0,0,0,10"
            Foreground="Red"
            Style="{ThemeResource CaptionTextBlockStyle}"
            Visibility="Collapsed" />

            
            <!--  Lista de Cursos  -->
            <ComboBox x:ConnectionId='10'
            x:Name="cmbCursos"
            Margin="0,0,0,10"
            DisplayMemberPath="Nombre"
                                                      
            PlaceholderText="Seleccione un Curso"
                                                          />
            <!--  Validacion Curso  -->
            <TextBlock x:ConnectionId='11'
            x:Name="errorCurso"
            Margin="0,0,0,10"
            Foreground="Red"
            Style="{ThemeResource CaptionTextBlockStyle}"
            Visibility="Collapsed" />

            
            
            <!--  Boton guardar  -->
            <Button x:ConnectionId='12'
            x:Name="btnGuardar"
            Grid.Row="11"
            Background="Green"
                                       
            Content="Guardar Alumno"
            Foreground="White"
            IsEnabled="False" />
        </StackPanel>
    </Grid>
</Page>

