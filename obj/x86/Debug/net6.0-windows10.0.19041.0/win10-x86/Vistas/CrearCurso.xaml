<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="trabajointerfaces.Vistas.CrearCurso"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:trabajointerfaces.Vistas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image Source="C:\Users\alexb\Desktop\programacion.jpg" Stretch="UniformToFill" Opacity="0.4" />
        <StackPanel
        Margin="10"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
            <Button x:ConnectionId='2'
            x:Name="GoBackButton"
            Margin="10,10,10,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
                                    >
                <FontIcon Glyph="&#xE72B;" />
            </Button>
            <!--  Titulo  -->
            <TextBlock x:ConnectionId='3'
            x:Name="titulo"
            Grid.Row="0"
            Margin="0,0,0,10"
            Style="{ThemeResource HeaderTextBlockStyle}"
            Text="Registrar Curso de IT" />

            <!--  validacion Socio  -->
            <InfoBar x:ConnectionId='4'
            x:Name="alert"
            Margin="0,0,0,10"
            IsOpen="False" />

            <!--  IOdentificador  -->
            <TextBox x:ConnectionId='5'
            x:Name="txtIdentificador"
            Margin="0,0,0,10"
                                      
            PlaceholderText="Id Curso"
                                          />
            
            <!--  validacion nombre  -->
            <TextBlock x:ConnectionId='6'
            x:Name="errorIdentificador"
            Margin="0,0,0,10"
            Foreground="Red"
            Style="{ThemeResource CaptionTextBlockStyle}"
            Visibility="Collapsed" />

            <!--  Nombre  -->
            <TextBox x:ConnectionId='7'
            x:Name="txtNombre"
            Margin="0,0,0,10"
                               
            PlaceholderText="Nombre"
                                   />
            <!--  validacion nombre  -->
            <TextBlock x:ConnectionId='8'
            x:Name="errorNombre"
            Margin="0,0,0,10"
            Foreground="Red"
            Style="{ThemeResource CaptionTextBlockStyle}"
            Visibility="Collapsed" />

            


           

            <!--  Boton guardar  -->
            <Button x:ConnectionId='9'
            x:Name="btnGuardar"
            Grid.Row="11"
            Background="Green"
                                      
            Content="Guardar"
            Foreground="White"
            IsEnabled="False" />
        </StackPanel>
    </Grid>
</Page>

